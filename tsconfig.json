    "strict": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}